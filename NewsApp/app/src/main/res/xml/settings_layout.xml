<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pageDefaultValue"
        android:inputType="numberDecimal"
        android:key="@string/sizeKey"
        android:maxLength="2"
        android:selectAllOnFocus="true"
        android:title="Page size" />

    <ListPreference
        android:defaultValue="@string/orderDefaultValue"
        android:entries="@array/orderList"
        android:entryValues="@array/orderValues"
        android:key="@string/orderKey"
        android:title="Order by" />
</PreferenceScreen>